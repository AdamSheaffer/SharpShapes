        <Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="190,18,0,0" VerticalAlignment="Top" Width="66" Height="23"/>
        <ComboBox HorizontalAlignment="Left" Margin="20,19,0,0" VerticalAlignment="Top" Width="120" Name="ShapeType" Height="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="0,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" Height="16" Width="0"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="154,18,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="250" Grid.ColumnSpan="2"/>
        <Canvas Name="ShapeCanvas"  HorizontalAlignment="Left" Height="250" Margin="20,54,0,0" VerticalAlignment="Top" Width="480" Grid.ColumnSpan="2" Background="#FFA6BE70"/>

    </Grid>
</Window>
